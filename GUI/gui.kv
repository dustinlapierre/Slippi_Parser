<StatsMenu>:
    title: "Player Statistics"
    title_align: "center"
    auto_dismiss: False
    size_hint: .35, 1
    pos_hint: {"top": 1, "right": 1}
    BoxLayout:
        orientation: 'vertical'
        Label:
            id: lbl_player1
            text: "Player 1 Stats ----------"
        Label:
            id: lbl_stage_control_1
            text: "Frames in stage control: "
        Label:
            id: lbl_above_opponent_1
            text: "Frames above opponent: "
        Label:
            id: lbl_time_offstage_1
            text: "Frames offstage: "
        Label:
            id: lbl_time_shielded_1
            text: "Frames shielding: "
        Label:
            id: lbl_block_success_1
            text: "Successful blocks: "
        Label:
            id: lbl_times_hit_1
            text: "Times hit: "
        Label:
            id: lbl_punish_amount_1
            text: "Punishes: "
        Label:
            id: lbl_hits_per_punish_1
            text: "Hits per punish: "
        Label:
            id: lbl_recovery_percent_1
            text: "Recovery %: "
        Label:
            id: lbl_neutral_win_percent_1
            text: "Neutral Win %: "
        Label:
            id: lbl_openings_per_kill_1
            text: "Openings Per Kill: "

        Label:
            id: lbl_player2
            text: "Player 2 Stats ----------"
        Label:
            id: lbl_stage_control_2
            text: "Frames in stage control: "
        Label:
            id: lbl_above_opponent_2
            text: "Frames above opponent: "
        Label:
            id: lbl_time_offstage_2
            text: "Frames offstage: "
        Label:
            id: lbl_time_shielded_2
            text: "Frames shielding: "
        Label:
            id: lbl_block_success_2
            text: "Successful blocks: "
        Label:
            id: lbl_times_hit_2
            text: "Times hit: "
        Label:
            id: lbl_punish_amount_2
            text: "Punishes: "
        Label:
            id: lbl_hits_per_punish_2
            text: "Hits per punish: "
        Label:
            id: lbl_recovery_percent_2
            text: "Recovery %: "
        Label:
            id: lbl_neutral_win_percent_2
            text: "Neutral Win %: "
        Label:
            id: lbl_openings_per_kill_2
            text: "Openings Per Kill: "
        Button:
            text: 'Close Menu'
            on_release: root.dismiss()

<MainView>:
    Label:
        id: lbl_player_1
        font_size: "24sp"
        halign: "center"
        width: 80
        size_hint: .3, .25
        pos_hint: {"top": 1, "left": 1}
        markup: True

    Label:
        id: lbl_Player_2
        font_size: "24sp"
        halign: "center"
        width: 80
        size_hint: .3, .25
        pos_hint: {"top": 1, "right": 1}
        markup: True

    Label:
        id: lbl_stage
        font_size: "24sp"
        halign: "center"
        width: 80
        size_hint: .3, .25
        pos_hint: {"top": 1, "x": .35}
        markup: True

    Image:
        id: img_player_1
        allow_stretch: True
        size_hint: .25, .4
        pos_hint: {"top": .852, "right": .265}

    Image:
        id: img_player_2
        allow_stretch: True
        size_hint: .25, .4
        pos_hint: {"top": .852, "right": .978}

    Image:
        id: img_player_1_stock_1
        allow_stretch: True
        size_hint: .085, .085
        pos_hint: {"top": .4, "right": .2}

    Image:
        id: img_player_1_stock_2
        allow_stretch: True
        size_hint: .085, .085
        pos_hint: {"top": .30625, "right": .2}

    Image:
        id: img_player_1_stock_3
        allow_stretch: True
        size_hint: .085, .085
        pos_hint: {"top": .2125, "right": .2}
    
    Image:
        id: img_player_1_stock_4
        allow_stretch: True
        size_hint: .085, .085
        pos_hint: {"top": .11875, "right": .2}

    Image:
        id: img_player_2_stock_1
        allow_stretch: True
        size_hint: .085, .085
        pos_hint: {"top": .4, "right": .92}

    Image:
        id: img_player_2_stock_2
        allow_stretch: True
        size_hint: .085, .085
        pos_hint: {"top": .30625, "right": .92}

    Image:
        id: img_player_2_stock_3
        allow_stretch: True
        size_hint: .085, .085
        pos_hint: {"top": .2125, "right": .92}

    Image:
        id: img_player_2_stock_4
        allow_stretch: True
        size_hint: .085, .085
        pos_hint: {"top": .11875, "right": .92}

    Label:
        id: lbl_console_window_border
        size_hint: .46, .8
        pos_hint: {"x": .2625, "y": .015}
        canvas.before:
            Color
                rgba: 1, .68, .26, 1
            Rectangle
                pos: self.pos
                size: self.size

    Label:
        id: lbl_console_window_behind
        color: 0, 0, 0, 1
        size_hint: .4475, .775
        pos_hint: {"x": .2675, "y": .025}
        canvas.before:
            Color
                rgba: 0, 0, 0, 1
            Rectangle
                pos: self.pos
                size: self.size

    Label:
        id: lbl_console_window
        font_size: "18sp"
        text: root.comm
        text_size: self.width, self.height
        size_hint: .4475, .775
        pos_hint: {"x": .2675, "y": .025}
        halign: "left"
        valign: "top"

    Button:
        id: btn_stats
        text: "S" + '\n' + "T" + '\n' + "A" + '\n' + "T" + '\n' + "S"
        size_hint: .06, .16
        pos_hint: {"top": .18, "right": .08}
        on_release: Factory.StatsMenu().open()
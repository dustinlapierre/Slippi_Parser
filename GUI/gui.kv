#:kivy 1.10.0
#File name: gui.py
#: import FloatLayout kivy.uix.floatlayout
#: import Window kivy.core.window

<MainView>:
    Label:
        id: lbl_player_1
        font_size: "24sp"
        halign: "center"
        width: 80
        size_hint: .3, .25
        pos_hint: {"top": 1, "left": 1}

    Label:
        id: lbl_Player_2
        font_size: "24sp"
        halign: "center"
        width: 80
        size_hint: .3, .25
        pos_hint: {"top": 1, "right": 1}

    Label:
        id: lbl_stage
        font_size: "24sp"
        halign: "center"
        width: 80
        size_hint: .3, .25
        pos_hint: {"top": 1, "x": .35}

    Image:
        id: img_player_1
        allow_stretch: True
        size_hint: .25, .4
        pos_hint: {"top": .852, "right": .265}

    Image:
        id: img_player_2
        allow_stretch: True
        size_hint: .25, .4
        pos_hint: {"top": .852, "right": .978}

    Image:
        id: img_player_1_stock_1
        allow_stretch: True
        size_hint: .1, .1
        pos_hint: {"top": .4, "right": .2}

    Image:
        id: img_player_1_stock_2
        allow_stretch: True
        size_hint: .1, .1
        pos_hint: {"top": .275, "right": .2}

    Image:
        id: img_player_1_stock_3
        allow_stretch: True
        size_hint: .1, .1
        pos_hint: {"top": .15, "right": .2}

    Image:
        id: img_player_2_stock_1
        allow_stretch: True
        size_hint: .1, .1
        pos_hint: {"top": .4, "right": .92}

    Image:
        id: img_player_2_stock_2
        allow_stretch: True
        size_hint: .1, .1
        pos_hint: {"top": .275, "right": .92}

    Image:
        id: img_player_2_stock_3
        allow_stretch: True
        size_hint: .1, .1
        pos_hint: {"top": .15, "right": .92}

    Label:
        id: lbl_console_window_border
        size_hint: .35, .8
        pos_hint: {"x": .3125, "y": .015}
        canvas.before:
            Color
                rgba: 1, .68, .26, 1
            Rectangle
                pos: self.pos
                size: self.size

    Label:
        id: lbl_console_window_behind
        color: 0, 0, 0, 1
        size_hint: .3375, .775
        pos_hint: {"x": .3175, "y": .025}
        canvas.before:
            Color
                rgba: 0, 0, 0, 1
            Rectangle
                pos: self.pos
                size: self.size

    Label:
        id: lbl_console_window
        font_size: "18sp"
        text: root.comm
        text_size: self.width, self.height
        size_hint: .3375, .775
        pos_hint: {"x": .3175, "y": .025}
        halign: "left"
        valign: "top"
